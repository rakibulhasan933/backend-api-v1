{
  "name": "nodejs-production-app",
  "version": "1.0.0",
  "description": "Production-ready Node.js application with TypeScript, Drizzle ORM, and PostgreSQL",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "bun run tsc",
    "start": "bun run dist/index.js",
    "dev": "bun run --watch src/index.ts",
    "db:generate": "bun run drizzle-kit generate",
    "db:migrate": "bun run drizzle-kit migrate",
    "db:studio": "bun run drizzle-kit studio",
    "db:push": "bun run drizzle-kit push",
    "db:drop": "bun run drizzle-kit drop",
    "db:seed": "bun run scripts/seed.ts",
    "db:test-seed": "bun run scripts/test-seed.ts",
    "db:demo-seed": "bun run scripts/demo-seed.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "echo \"Linting not configured yet\"",
    "clean": "rimraf dist",
    "prebuild": "bun run clean"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "drizzle",
    "postgresql",
    "production",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "postgres": "^3.4.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "drizzle-kit": "^0.20.9",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}